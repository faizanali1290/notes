const email = "testemailgmailcom@gmail.com";

const regex = /^[a-zA-Z0-9_]+@gmail\.com$/;

if (regex.test(email)) {
  console.log("Valid Gmail address");
} else {
  console.log("Invalid Gmail address");
}

}
